<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.martin.euop.user.mapper.UserMapper">
    <resultMap id="UserResultMap" type="com.martin.euop.user.entity.UserEntity">
        <id column="f_user_id" property="userId"/>
        <result column="f_login_name" property="userName"/>
        <result column="f_dept_id" property="userDeptId"/>
        <result column="f_type" property="userType"/>
        <result column="f_user_type" property="userPlatform"/>
    </resultMap>
    <select id="getUserById" resultMap="UserResultMap" parameterType="string">
      SELECT f_user_id,f_login_name,f_dept_id,f_type,f_user_type FROM t_user WHERE f_user_id=#{userId}
    </select>

    <select id="getUserByName" resultMap="UserResultMap" parameterType="string">
        SELECT f_user_id,f_login_name,f_dept_id,f_type,f_user_type FROM t_user WHERE f_login_name=#{userName}
    </select>

</mapper>